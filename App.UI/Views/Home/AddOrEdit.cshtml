@model App.Core.Entities.Employee

<form id="frmEmployee">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="EmployeeId" type="hidden" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TypeId" class="control-label">Type</label>
        <select asp-for="TypeId" class="form-control" asp-items="@(ViewBag.EmployeeTypes as SelectList)">
            <option>Please select a type...</option>
        </select>
        <span asp-validation-for="TypeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EmploymentDate" class="control-label"></label>
        <input asp-for="EmploymentDate" class="form-control" />
        <span asp-validation-for="EmploymentDate" class="text-danger"></span>
    </div>
</form>